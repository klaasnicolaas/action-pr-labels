{
  "name": "action-pr-labels",
  "description": "Check if a Pull Request has valid labels",
  "version": "2.0.0",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "author": "Klaas Schoute <hello@student-techlife.com>",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && ncc build",
    "format:check": "prettier --check src/**/*.ts",
    "format:fix": "prettier --write src/**/*.ts",
    "typing:check": "tsc --noEmit",
    "test": "jest tests",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/klaasnicolaas/action-pr-labels.git"
  },
  "bugs": {
    "url": "https://github.com/klaasnicolaas/action-pr-labels/issues"
  },
  "homepage": "https://github.com/klaasnicolaas/action-pr-labels#readme",
  "keywords": [
    "actions",
    "node",
    "github",
    "labels"
  ],
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "text"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!chalk).+\\.js$"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@octokit/rest": "^22.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@vercel/ncc": "^0.38.1",
    "babel-jest": "^29.7.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  }
}
